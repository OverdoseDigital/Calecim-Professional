{% comment %} calecim {% endcomment %}
{% assign el_id = "shopify-section-" | append: section.id%}
{% render 'section-padding', section:section , el_id : el_id%}

<style> 
#shopify-section-{{ section.id }} .htq-wrap {
  display: flex;
  flex-direction: column;
}
#shopify-section-{{ section.id }} .htq-right ul li:before {
  border: 1px solid #231D1D;
  border-radius: 50px;
  width: 12px;
  height: 12px;
  display: block;
  content: " ";
  position: absolute;
  left: 0;
  top: 7px;
}
@media screen and (min-width: 768px) {

}
@media screen and (min-width: 1024px) {
  #shopify-section-{{ section.id }} .htq-wrap {
    flex-direction: row;
  }
  #shopify-section-{{ section.id }} .htq-left,
  #shopify-section-{{ section.id }} .htq-right {
    width: 50%;
  }
}
</style>
<section class="hair-treatment-questions">
  <div class="container">
    <div class="htq-wrap">
      <div class="htq-left d-pr-160">
        {% if section.settings.title != blank %}
        <h3 class="h3">{{ section.settings.title }}</h3>
        {% endif %}
        {% if section.settings.text != blank %}
        <div class="">{{ section.settings.text }}</div>
        {% endif %}
        {% if section.settings.button_label != blank %}
        <div class="hide-m show-d">
          <a href="{{section.settings.button_url}}" class="btn1 with-icon d-mt-30">
            {{section.settings.button_label}}
            <span class="icon">{{ settings.icon_btn_right }}</span>
          </a>
        </div>
        {% endif %}
      </div>
      <div class="htq-right d-pl-10">
        <ul class="max-480 mt-15 d-mt-0">
          {% for block in section.blocks %}
          <li class="{% unless forloop.last == true %}d-mb-20 mb-15{% endunless %} pl-30 relative">{{ block.settings.title }}</li>
          {% endfor %}
        </ul>
        {% if section.settings.button_label != blank %}
        <div class="hide-d show-m">
          <a href="{{section.settings.button_url}}" class="btn1 with-icon mt-20">
            {{section.settings.button_label}}
            <span class="icon">{{ settings.icon_btn_right }}</span>
          </a>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Hair Treatment Questions",
    "settings": [
      {
        "type": "textarea",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"
      },
      {
        "type": "header",
        "content": "Section Padding"
      },
      {
        "type": "text",
        "id": "top_padding_m",
        "label": "Top padding (Mobile)"
      },
      {
        "type": "text",
        "id": "bottom_padding_m",
        "label": "Bottom padding (Mobile)"
      },
      {
        "type": "text",
        "id": "top_padding_t",
        "label": "Top padding (Tablet)"
      },
      {
        "type": "text",
        "id": "bottom_padding_t",
        "label": "Bottom padding (Tablet)"
      },
      {
        "type": "text",
        "id": "top_padding",
        "label": "Top padding (Desktop)"
      },
      {
        "type": "text",
        "id": "bottom_padding",
        "label": "Bottom padding (Desktop)"
      }
    ],
    "blocks": [
      {
        "type": "entry",
        "name": "Entry",
        "settings": [
          {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hair Treatment Questions"
      }
    ]
  }
{% endschema %}
