                            {%- assign video_url_mobile = '' -%}
                            {%- for vid_source in section.blocks[2].settings.video_mobile.sources -%}
                                {%- if vid_source.mime_type == 'video/mp4' -%}
                                    {%- assign video_type_mobile = vid_source.mime_type -%}
                                    {%- assign video_url_mobile = vid_source.url -%}
                                {%- endif -%}
                            {%- endfor -%}

                            {%- assign id = "video-3-" | append: section.id -%}
                            {%- render 'global-video-wrapper-responsive',
                                desktop_image: section.blocks[2].settings.video_poster_desktop,
                                mobile_image: section.blocks[2].settings.video_poster_mobile,
                                desktop_video_url: video_url_desktop,
                                mobile_video_url: video_url_mobile,
                                video_id: id,
                                load_inside_vue: true
                            -%}
