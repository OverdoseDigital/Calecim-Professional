                {%- endif -%}

                {%- if section.blocks[1].settings.url != blank -%}
                    </a>
                {%- endif -%}
            </div>
        </div>

        <div class="container">
            <div class="title-container mt-40 d-mt-0 max-710 ml-auto mr-auto tc">
                <h1 class="h4">{{ section.settings.title | newline_to_br }}</h1>
                {%- if section.settings.text != blank -%}
                    <p class="p2 c-grey mt-10 d-mt-15">{{ section.settings.text | newline_to_br }}</p>
                {%- endif -%}
            </div>

            {%- if section.blocks[2].settings.video_poster_desktop != blank -%}
                <div class="video-3-wrapper mt-30 d-mt-50 width-100">
                    <div class="video-3">
                        {%- if section.blocks[2].settings.url != blank -%}
                            <a href="{{ section.blocks[2].settings.url }}" class="show-m">
                        {%- endif -%}

                        <div class="video-container">
