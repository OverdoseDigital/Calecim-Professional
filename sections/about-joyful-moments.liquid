{% comment %} Love&Co Theme {% endcomment %}
{% assign el_id = "shopify-section-" | append: section.id %}
{% render 'section-padding', section: section, el_id: el_id %}

<style>
    #shopify-section-{{ section.id }} video {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    #shopify-section-{{ section.id }} .main-video-wrapper .inner-wrapper {
        position: absolute;
        width: 100%;
        left: 0;
        top: 0;
        z-index: 2;
        transform-origin: top left;
    }
    #shopify-section-{{ section.id }} .top-video-wrapper {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    #shopify-section-{{ section.id }} .video-1 {
        position: relative;
        float: left;
        margin-left: 25px;
        width: 43%;
        height: auto;
        z-index: 1;
    }
    #shopify-section-{{ section.id }} .video-2 {
        position: relative;
        float: right;
        margin-top: 40px;
        margin-right: 25px;
        width: 27%;
        height: auto;
        z-index: 1;
    }
    #shopify-section-{{ section.id }} .video-2 .video-container {
        opacity: 0;
    }
    #shopify-section-{{ section.id }} .video-3 {
        width: 100%;
    }
    #shopify-section-{{ section.id }} .arrow-icon {
        position: fixed;
        width: 20px;
        height: 10px;
        left: 50%;
        transform: translateX(-50%);
        bottom: 30px;
        z-index: 200;
        font-size: 0;
        transition: 0.3s ease all;
    }
    #shopify-section-{{ section.id }} .arrow-icon svg {
        display: block;
        width: 20px;
        height: 10px;
    }

    @media screen and (min-width: 768px) {
        #shopify-section-{{ section.id }} .video-1 {
            margin-left: 30px;
        }
        #shopify-section-{{ section.id }} .video-2 {
            margin-right: 30px;
        }
    }

    @media screen and (min-width: 1024px) {
        #shopify-section-{{ section.id }} .title-container {
            position: relative;
            margin-top: -30px;
            z-index: 2;
        }

        #shopify-section-{{ section.id }} .video-1 {
            left: 40px;
            top: 80px;
            width: 27%;
            margin: 0;
        }
        #shopify-section-{{ section.id }} .video-2 {
            right: 40px;
            top: 190px;
            margin: 0;
            width: 27%;
        }
        #shopify-section-{{ section.id }} .video-3 {
            width: 40%;
            transform: translateX(95%);
        }
    }
</style>

<section class="about-joyful-moments">
    <a href="javascript:void(0)" @click="scrollToContent($event)" class="arrow-icon show-m hide-t">{{ settings.icon_accordion }}</a>
    <div class="main-video-wrapper relative width-100">
        <div class="inner-wrapper">
            {%- assign video_type_desktop = '' -%}
            {%- assign video_url_desktop = '' -%}
            {%- for vid_source in section.settings.video_desktop.sources -%}
                {%- if vid_source.mime_type == 'video/mp4' -%}
                    {%- assign video_type_desktop = vid_source.mime_type -%}
                    {%- assign video_url_desktop = vid_source.url -%}
                {%- endif -%}
            {%- endfor -%}

            {%- assign video_type_mobile = '' -%}
            {%- assign video_url_mobile = '' -%}
            {%- for vid_source in section.settings.video_mobile.sources -%}
                {%- if vid_source.mime_type == 'video/mp4' -%}
                    {%- assign video_type_mobile = vid_source.mime_type -%}
                    {%- assign video_url_mobile = vid_source.url -%}
                {%- endif -%}
            {%- endfor -%}

            {%- assign id = "main-video-" | append: section.id -%}
            {%- render 'global-video-wrapper-responsive',
                desktop_image: section.settings.video_poster_desktop,
                mobile_image: section.settings.video_poster_mobile,
                desktop_video_url: video_url_desktop,
                mobile_video_url: video_url_mobile,
                video_id: id,
                load_inside_vue: true
            -%}
        </div>
    </div>

    <div class="bottom-section pt-80 pb-40 t-pb-60 d-pb-80 relative">
        <div class="top-video-wrapper">
            <div class="video-1">
                {%- if section.blocks[0].settings.url != blank -%}
                    <a href="{{ section.blocks[0].settings.url }}" class="show-m">
                {%- endif -%}

                <div class="video-container">
                    {%- assign video_type_desktop = '' -%}
                    {%- assign video_url_desktop = '' -%}
                    {%- for vid_source in section.blocks[0].settings.video_desktop.sources -%}
                        {%- if vid_source.mime_type == 'video/mp4' -%}
                            {%- assign video_type_desktop = vid_source.mime_type -%}
                            {%- assign video_url_desktop = vid_source.url -%}
                        {%- endif -%}
                    {%- endfor -%}

                    {%- assign video_type_mobile = '' -%}
                    {%- assign video_url_mobile = '' -%}
                    {%- for vid_source in section.blocks[0].settings.video_mobile.sources -%}
                        {%- if vid_source.mime_type == 'video/mp4' -%}
                            {%- assign video_type_mobile = vid_source.mime_type -%}
                            {%- assign video_url_mobile = vid_source.url -%}
                        {%- endif -%}
                    {%- endfor -%}

                    {%- assign id = "video-1-" | append: section.id -%}
                    {%- render 'global-video-wrapper-responsive',
                        desktop_image: section.blocks[0].settings.video_poster_desktop,
                        mobile_image: section.blocks[0].settings.video_poster_mobile,
                        desktop_video_url: video_url_desktop,
                        mobile_video_url: video_url_mobile,
                        video_id: id,
                        load_inside_vue: true
                    -%}
                </div>
                
                {%- if section.blocks[0].settings.title != blank -%}
                    <p class="p3 uppercase spacing-2 bold-600 mt-15 hide-m show-d">{{ section.blocks[0].settings.title }}</p>
                {%- endif -%}

                {%- if section.blocks[0].settings.url != blank -%}
                    </a>
                {%- endif -%}
            </div>

            <div class="video-2">
                {%- if section.blocks[1].settings.url != blank -%}
                    <a href="{{ section.blocks[1].settings.url }}" class="show-m">
                {%- endif -%}

                <div class="video-container">
                    {%- assign video_type_desktop = '' -%}
                    {%- assign video_url_desktop = '' -%}
                    {%- for vid_source in section.blocks[1].settings.video_desktop.sources -%}
                        {%- if vid_source.mime_type == 'video/mp4' -%}
                            {%- assign video_type_desktop = vid_source.mime_type -%}
                            {%- assign video_url_desktop = vid_source.url -%}
                        {%- endif -%}
                    {%- endfor -%}

                    {%- assign video_type_mobile = '' -%}
                    {%- assign video_url_mobile = '' -%}
                    {%- for vid_source in section.blocks[1].settings.video_mobile.sources -%}
                        {%- if vid_source.mime_type == 'video/mp4' -%}
                            {%- assign video_type_mobile = vid_source.mime_type -%}
                            {%- assign video_url_mobile = vid_source.url -%}
                        {%- endif -%}
                    {%- endfor -%}

                    {%- assign id = "video-2-" | append: section.id -%}
                    {%- render 'global-video-wrapper-responsive',
                        desktop_image: section.blocks[1].settings.video_poster_desktop,
                        mobile_image: section.blocks[1].settings.video_poster_mobile,
                        desktop_video_url: video_url_desktop,
                        mobile_video_url: video_url_mobile,
                        video_id: id,
