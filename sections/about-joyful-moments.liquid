                        {%- if section.blocks[2].settings.title != blank -%}
                            <p class="p3 uppercase spacing-2 bold-600 mt-15 hide-m show-d">{{ section.blocks[2].settings.title }}</p>
                        {%- endif -%}

                        {%- if section.blocks[2].settings.url != blank -%}
                            </a>
                        {%- endif -%}
                    </div>
                </div>
            {%- endif -%}
        </div>
    </div>
</section>

<script>
    const aboutJoyfulVue = Vue.createApp({
        delimiters: ['${','}'], 
        data() {
			return {
                mainVideoObj: null,
                smallVideoObj: null,
                prevScrollPos: 0
			}
		},
		mounted() {
            const this_obj = this;
            const doc = document.documentElement;
            const body = document.body;

            this.mainVideoObj = document.querySelector(`#shopify-section-{{ section.id }} .main-video-wrapper .inner-wrapper`);
            const mainVideoHeight = this.mainVideoObj.offsetHeight;
            const mainVideoWidth = this.mainVideoObj.offsetWidth;
            const posMain = this.mainVideoObj.getBoundingClientRect();
            const mainPosTop = posMain.top + window.pageYOffset;
            const startTop = mainPosTop - window.innerHeight;
            const mainPosLeft = posMain.left + window.pageXOffset;
            const headerHeight = document.querySelector('header').offsetHeight;
            const arrowObj = document.querySelector(`#shopify-section-{{ section.id }} .arrow-icon`);

            //-- set main video container height
            document.querySelector(`#shopify-section-{{ section.id }} .main-video-wrapper`).style.height = mainVideoHeight + 'px';

            //-- get small video dimension
            this.smallVideoObj = document.querySelector(`#shopify-section-{{ section.id }} .video-2 .video-container`);
            const smallWidth = this.smallVideoObj.offsetWidth;
            const smallHeight = this.smallVideoObj.offsetHeight;
            const pos = this.smallVideoObj.getBoundingClientRect();
            const smallPosTop = pos.top + window.pageYOffset - headerHeight + 6;
            const smallPosLeft = pos.left + window.pageXOffset;

            const percentRedWidth = ((((mainVideoWidth-smallWidth)/smallWidth)*100).toFixed(0))/1000;
            const percentRedWidthTotal = 1-percentRedWidth;

            const percentRedHeight = ((((mainVideoHeight-smallHeight)/smallHeight)*100).toFixed(0))/1000;
            const percentRedHeightTotal = 1-percentRedHeight;

            window.addEventListener("scroll", () => { 
                    const currentScrollPosition = Math.max(doc.scrollTop, body.scrollTop);
                    const scrollDirection = currentScrollPosition > this.prevScrollPos ? "down" : "up";
                    let currentScroll = window.scrollY - startTop;
                    let scrollProgress = (currentScrollPosition/(smallPosTop-mainPosTop))*100;

                    if(scrollDirection == 'down' && currentScrollPosition >= this_obj.mainVideoObj.offsetTop) {
                        if(scrollProgress <= 100) {
                            this_obj.mainVideoObj.style.transform = `translateY(${(smallPosTop*scrollProgress)/100}px) translateX(${(smallPosLeft*scrollProgress)/100}px) scale(${1-((percentRedWidthTotal*scrollProgress)/100)})`;
                        } else {
                            this_obj.mainVideoObj.style.transform = `translateY(${smallPosTop}px) translateX(${smallPosLeft}px) scale(${(percentRedWidth)})`;
                        }
                    } else if (scrollDirection == 'up' && currentScrollPosition-headerHeight < (this_obj.mainVideoObj.offsetTop+this_obj.mainVideoObj.offsetHeight)) {
                        if(scrollProgress > 0 && scrollProgress <= 100) {
                            this_obj.mainVideoObj.style.transform = `translateY(${(smallPosTop*scrollProgress)/100}px) translateX(${(smallPosLeft*scrollProgress)/100}px) scale(${1-((percentRedWidthTotal*scrollProgress)/100)})`;
                        } else if (scrollProgress <= 0) {
                            this_obj.mainVideoObj.style.transform = `translateY(0) translateX(0) scale(1)`;
                        }
                    }

                    this_obj.prevScrollPos = currentScrollPosition;

                if(currentScrollPosition > mainPosTop+(mainVideoHeight/2)) {
                    arrowObj.style.opacity = 0;
                } else {
                    arrowObj.style.opacity = 1;
                }
            });
        },
        methods: {
            scrollToContent(e) {
                this.smallVideoObj.scrollIntoView({behavior: 'smooth'});
            }
        }
    }).mount('#shopify-section-{{ section.id }} .about-joyful-moments');
</script>

