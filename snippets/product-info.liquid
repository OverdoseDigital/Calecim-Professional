{% comment %} Love&Co Theme {% endcomment %}
{%- assign variant = product.selected_or_first_available_variant -%}
<div
    class="product-info relative">    
    <div
        class="global-flex flex-wrap width-100">
        {%- if product.metafields.reviews.reviews_count != blank -%}
            <div class="ratings-container mb-5 d-mb-10">
                <div class="global-flex ai-center">
                    <div class="star-wrapper">
                        {%- assign rating = product.metafields.reviews.rating -%}

                        {%- for i in (1..rating) -%}
                            <span class="star show-m-inline-block">{{ settings.icon_star }}</span>
                        {%- endfor -%}
                    </div>
                    <p class="p5 bold-500 ml-5">{{ product.metafields.reviews.reviews_count }}</p>
                </div>
            </div>
        {%- endif -%}

        <h1
            class="h2 pr-20 width-100"
            id="product-title">
            {{ product.title }}
        </h1>
    </div>

    <div
        class="product-info-price mt-10 d-mt-15 p2">
        {%- render 'product-price', product: product -%}
    </div>

    <div class="desc-container width-100 {% if product.metafields.feature.title_1 != blank %} mb-10 {% endif %} mt-15 d-mt-20 p1 rte rte-inherit">
        {{ product.description }}
    </div>

    {%- if product.metafields.feature.title_1 != blank -%}
        <div class="product-features relative width-100 d-mt-30 mt-20">
            <div class="row">
                <div class="global-flex flex-wrap max-400">
                    {%- for i in (1..6) -%}
                        {%- assign title = "title_" | append: i -%}
                        {%- assign title_acc = product.metafields.feature[title] -%}
                        {%- assign icon = "icon_" | append: i -%}
                        {%- assign icon_acc = product.metafields.feature[icon] -%}
        
                        {%- if title_acc != blank -%}
                            <div class="product-feature-each col-12 col-t-6 show-m-inline-flex ai-center mb-15">
                                <div class="icon">
                                    {{ icon_acc[0].media_inline }}
                                </div>
                                <p class="p2 bold-500 ml-10">{{ title_acc }}</p>
                            </div>
                        {%- endif -%}
                    {%- endfor -%}
                </div>
            </div>
        </div>
    {%- endif -%}

    {%- render 'product-variants', product: product -%}
    {%- render 'complete-the-look', product: product -%}
    {%- render 'pair-your-ring', product: product -%}
</div>

<script>
    window.addEventListener('load', function(){
        const delay = setTimeout(function(){
            _swat.initializeActionButtons('.product-info-outer-wrapper');
            
            clearTimeout(delay);
        }, 2000);
    });
</script> 