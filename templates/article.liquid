<style>
    .article-container .title-container{
        min-width:330px;
        display: flex;
        flex-direction: column;
    }
    .article-container .title-container .title-right {
        display: flex;
        flex-direction: row;
        order: 1;
    }
    .article-container .title-container .title-left {
        order: 2;
    }
    .article-container .title-container .title-right .tags-wrapper {
        display:flex;
        flex-wrap: wrap;
        white-space: nowrap;
    }
    .article-container .gradient-overlay{
        position:absolute;
        top:0;
        width:100%;
        height:100%;
        background: linear-gradient(180deg, #2c2c2c65 0%, #2c2c2cbe 100%);
        mix-blend-mode: multiply;
    }

    .article-container .flex-wrapper{
        display:flex;
        flex-wrap:wrap;
    }
    .article-container .main-container{
        overflow-wrap: break-word;
        width:100%;
    }
    .article-container .side-container{
        width:100%;
        transition: 0.3s ease all;
    }
    .article-container .side-container .horizontal-line {
        height:0.5px;width:calc(100% + 40px);
        background:#E7E7E7;
        margin-left:-20px;
        margin-right:-20px;
    }
    .article-container .rte strong{
        font-weight:600;
    }
    .article-container .rte h4{
        margin-top:15px;
        margin-bottom:20px;
    }
    .article-container .rte img{
        height:100%;
        margin-bottom:20px;
    }
    .article-container .featured-glance-each .icon-container{
        width:25px;
    }
    .article-container .featured-glance-each .text-container{
        width:calc(100% - 25px);
        padding-left:15px;
    }

    .article-container h4 {
        font-size: 15px;
        letter-spacing: 0.75px;
    }

    .more-article-container .swiper-custom-arrow {
        display: none;
    }
    .more-article-container .swiper-custom-arrow.swiper-button-disabled {
        opacity: 0;
    }
    .more-article-container .swiper-custom-arrow.left{
        left:10px;
    }
    .more-article-container .swiper-custom-arrow.right{
        right:10px;
    }
    .more-article-container .swiper {
        overflow: visible!important;
        clip-path: inset(-100vw -100vw -100vw -100vw);
    }
    .more-article-container .swiper-slide{
        width: 75%;
        flex: 0 0 75%;
        padding: 0 7.5px;
    }
    .more-article-container .carousel-wrapper{
        margin: 0 -7.5px;
    }
    .more-article-container .swiper-button,
    .more-article-container a.hide-m {
        display:none;
    }
    .more-article-container .swiper-pagination{
        top:unset;
        bottom:0;
        left:7.5px;
        width:calc(100% - 15px);
        height:2px;
    }
    .more-article-container .swiper-pagination-progressbar{
        background:#E7E7E7;
    }
    .more-article-container .swiper-pagination-progressbar-fill{
        background:#231D1D;
    }

    .more-article-container .arrow-mobile {
        font-size: 0;
        width: 8px;
        height: 8px;
    }
    .more-article-container .arrow-mobile svg {
        width: 8px;
        height: 8px;
    }
    .more-article-container .article-each-wrapper {
      position: relative;
    }
    .more-article-container .article-each-wrapper .ae-caption {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
    .more-article-container .article-each-wrapper .ae-tags span {
      padding: 5px 10px;
      border-radius: 25px;
      white-space: nowrap;
      display: inline-block;
    }

    .article-container .article-share a {
        display: inline-block;
        font-size: 0;
    }
    .article-container .article-share a .icon,
    .article-container .article-share a .icon svg {
        width: 40px;
        height: 40px;
    }

    .article-container .copy-notif{
        background: var(--black);
        color: #fff;
        padding: 5px 10px;
        text-align: center;
        position: absolute;
        top: -35px;
        left: 50%;
        width: 100px;
        border-radius: 30px;
        opacity: 0;
        transition: 0.3s all ease;
        margin-left: -70px;
    }
    .article-container .copy-notif.visible{
        opacity:1;
    }
    .article-container .copy-to-clipboard,
    .article-container .copy-to-clipboard svg {
        display: inline-block;
        width: 40px;
        height: 40px;
        font-size: 0;
    }
    .article-container .banner-container {
        width: calc(100% + 40px);
        margin-left: -20px;
    }

    @media screen and (min-width: 768px) {
        .article-container .banner-container {
            width: calc(100% + 60px);
            margin-left: -30px;
        }
        .article-container .title-container{
            min-width:420px;
        }
        .article-container .rte h4{
            margin-top:20px;
            margin-bottom:25px;
        }
        .article-container .rte img{
            margin-bottom:25px;
        }
        .article-container .side-container .horizontal-line {
            height:0.5px;width:calc(100% + 60px);
            background:#E7E7E7;
            margin-left:-30px;
            margin-right:-30px;
        }
        .article-container .flex-wrapper-tablet{
            display:flex;
            margin:0 -10px;
        }
        .article-container .flex-wrapper-tablet .article-each-wrapper{
            padding-left:10px;
            padding-right:10px;
        }
        .more-article-container .swiper-slide{
            width: 33.3333%;
            flex: 0 0 33.3333%;
        }
    }
    @media screen and (min-width: 1024px) {
        .article-container .copy-notif {
            margin-left: -50px;
        }
        .article-container .banner-container {
            width: 100%;
            margin-left: 0;
        }
        .article-container .title-container{
            display: flex;
            justify-content: space-between;
            flex-direction: row;
            align-items: end;
        }
        .article-container .title-container .title-right {
            display: flex;
            flex-direction: column;
            align-items: end;
            order: 2;
        }
        .article-container .title-container .title-left {
            order: 1;
        }
        .article-container .title-container .title-right .tags-wrapper {
            justify-content: end;
        }
        .article-container .main-container{
            width:70%;
            padding-right:125px;
        }
        .article-container .side-container{
            width:30%;
            top:40px;
            position: sticky;
            margin-bottom: auto;
        }
        .article-container .publish-date{
            align-items:center;
        }
        .article-container .flex-wrapper-tablet{
            display:block;
            margin:0;
        }
        .article-container .flex-wrapper-tablet .article-each-wrapper{
            padding-left:0;
            padding-right:0;
        }
        .more-article-container .swiper {
            overflow: hidden !important;
        }
        .more-article-container .swiper-pagination{
            left:10px;
            width:calc(100% - 20px);
        }
        .more-article-container a.show-d{
            display:inline-block;
        }
        .more-article-container a.hide-d{
            display:none;
        }
        .more-article-container .title-container{
            display:flex;
            flex-wrap:wrap;
            justify-content:space-between;
            align-items: center;
        }
        .more-article-container .swiper-slide{
            width: 25%;
            flex: 0 0 25%;
            padding: 0 10px;
        }
        .more-article-container .carousel-wrapper{
            margin: 0 -10px;
        }
        .more-article-container .swiper-custom-arrow{
            display: inline-flex;
        }
        .more-article-container .swiper-custom-arrow.left{
            left:30px;
        }
        .more-article-container .swiper-custom-arrow.right{
            right:30px;
        }
    }
    
 </style>
 
 <div class="global-content-top-margin">
    <article class="article-container pb-40 t-pb-50 d-pb-80 bb-1 b-border">        
        <div class="container">
            <div class="mb-15 d-mb-50 mt-20 d-mt-30">
                {%- render 'breadcrumbs', class_color: 'c-black opacity-5' -%}
            </div>
            <div class="title-container tl mb-20 d-mb-70">
                <div class="title-left">
                    <h1 class="h2 max-700">{{ article.title }}</h1>
                    {%- if article.excerpt != blank -%}
                        <p class="p1 max-500 mt-5 d-mt-10">{{ article.excerpt }}</p>
                    {%- endif -%}
                </div>
                <div class="title-right">
                    {% if article.metafields.read.read_time != blank%}
                    <div class="tl show-d hide-m p5 bold-500 uppercase mr-5 d-mr-0 d-ml-10 image-tag bg-black c-white b-1 b-black">{{ article.metafields.read.read_time }}</div>
                    {% endif %}
                    <div class="tags-wrapper tl mb-5 d-mb-0">
                        {% if article.metafields.read.read_time != blank%}
                            <span class="show-m hide-d p5 bold-500 uppercase mr-5 d-mr-0 d-ml-10  mb-5 d-mb-0 image-tag bg-black c-white b-1 b-black">{{ article.metafields.read.read_time }}</span>
                        {% endif %}
                        {% for tag in article.tags %}
                            <a href="{{ blog_url }}/tagged/{{ tag | handle }}" class="show-m-inline-block p5 bold-500 uppercase mr-5 d-mr-0 ml-0 d-ml-10 mb-5 d-mb-0 d-mt-10 image-tag c-black b-1 b-black">{{ tag }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="banner-container relative">
                {%- render 'global-image-wrapper',
                    image: article.image,
                    additional_class: ""
                %}
            </div>
            <div class="flex-wrapper pt-30 t-pt-50 d-pt-60">
                <div class="main-container pb-40 t-pb-50">
                    <div class="rte">
                        {{ article.content }} 
                    </div>
                </div>
                <div class="side-container">                    
                    {% if article.metafields.glance.enable %}
                    <div class="hide-d horizontal-line mb-40"></div>
                    <div class="p3 bold-500 pb-15 d-pb-20 ">{{ article.metafields.glance.section_title }}</div>
                    <div class="p2 pl-25 pr-25 d-pl-30 d-pr-30 pt-25 d-pt-30 pb-25 d-pb-30 b-1 b-border mb-25 d-mb-30">
                        <p class="p2">{{ article.metafields.glance.text }}</p>
                        
                        {%- for i in (1..5) -%}
                            {%- assign icon = 'content_icon_' | append: i -%}
                            {%- assign icon = article.metafields.glance[icon] -%}
                            {%- assign text = 'content_text_' | append: i -%}
                            {%- assign text = article.metafields.glance[text] -%}
                        
                        {% if icon != blank %}
                        <div class="featured-glance-each pt-15 d-pt-20 flex flex-wrap">
                            <div class="icon-container pt-5">
                                {% for image in icon %}
                                    <img src="{{ image.src }}"/>
                                  {% endfor %}
                            </div>
                            <div class="text-container">
                                <div class="p2 c-black">{{ text }}</div>
                            </div>
                        </div>
                    {% endif %}
                    {%- endfor -%}
                       
                       
                        
                    </div>
                    {% endif %}
                    
                    {% if article.metafields.featured_products.enable %}
                    <div class="p3 bold-500 pb-15 d-pb-20 pt-5 t-pt-10">{{ article.metafields.featured_products.section_title }}</div>
                    {% assign selected_handles = article.metafields.featured_products.products | split: '|' %}
                    {% for selected_handle in selected_handles %}
                        {% assign pro_obj = all_products[selected_handle] %}
                            <div class="mb-10 d-mb-15 pt-20 d-pt-30 pb-20 d-pb-30 pl-15 pr-15 d-pl-20 d-pr-20 bg-lightgrey">
                                {%- render 'product-each-landscape', product: pro_obj -%}
                            </div>
                        {%endfor%}
                    {% endif %}
                    
                    <!--End Featured Products-->

                    <div class="flex flex-wrap mt-25 d-mt-30 align-flex jc-between article-share width-100">
                        <div class="p3 bold-500 mr-5">{{ 'blogs.article.share' | t }}</div>
                        <div class="flex flex-wrap">
                            <a class="show-m-inline-block mr-10" href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url | url_encode }}{{ article.url | url_encode }}" target="_blank">
                                <div class="icon">{{settings.icon_facebook_circled}}</div>
                            </a>
                            <a class="show-m-inline-block mr-10" href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&amp;url={{ shop.url | url_encode }}{{ article.url | url_encode }}" target="_blank">
                                <div class="icon">{{settings.icon_twitter_circled}}</div>
                            </a>
                            <a onclick="copyToClipboard(event)" class="copy-to-clipboard cursor relative">
                                <input type="text" class="clipboard-value absolute" style="opacity: 0; width:1px; height: 1px;" value="{{ shop.url }}{{ article.url }}">
                                {{ settings.icon_share_circled }}

                                <div class="copy-notif p4">{{ 'blogs.article.link_copied' | t }}</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
        </div>
        
    </article>
</div>
<section id="more-article-container" class="more-article-container overflow pt-40 t-pt-60 d-pt-80 pb-40 t-pb-60 d-pb-80">
    <div class="container">
        <div class="title-container">
            <div class="h3 global-flex ai-start uppercase"> 
                {{ 'blogs.article.more_to_read' | t }}
                {%- assign root = '' -%}
                {%- if routes.root_url != '/' -%}
                    {%- assign root = routes.root_url -%}
                {%- endif -%}

                <a href="{{ root }}{{ blog.url }}" class="hide-d show-m-inline-flex arrow-mobile ml-10 y3">
                    {{ settings.icon_arrow_diagonal_up }}
                </a>
            </div>

            <a href="{{ root }}{{ blog.url }}" class="btn1 hide-m show-d">{{ 'blogs.article.read_more' | t }}<span class="ml-30" style="display:inline-flex;">{{ settings.icon_btn_right }}</span></a>
        </div>
        <div class="outer-wrapper mt-15 d-mt-30">
            <div class="carousel-wrapper">
                <div id="slider-more-article-container" class="swiper swiper-container">
                    <div class="swiper-wrapper">
                        {%- assign curr_handle = article.handle -%}
                        {%- assign max_articles = blog.articles_count | minus: 1 -%}
                        {%- assign more = '' -%}
                        {% paginate blog.articles by 500 %}

                        {%- for i in (1..4) -%}
                            {%- for j in (1..30) -%}
                                {% assign min = 0 %}
                                {% assign max = max_articles %}
                                {% assign diff = max | minus: min %}
                                {% assign randomNumber = "now" | date: "%N" | modulo: diff | plus: min %}
                                {%- unless more contains blog.articles[randomNumber].handle or curr_handle contains blog.articles[randomNumber].handle -%}
                                    {%- assign more = more | append: blog.articles[randomNumber].handle | append: '|' -%}
                                    {%- break -%}
                                {%- endunless -%}
                            {%- endfor -%}
                        {%- endfor -%}

                        {% endpaginate %}

                        {%- assign more = more | split: '|' -%}
                        {%- if more.size > 0 -%}
                            {%- for m in more -%}
                                {%- if m != '' -%}
                                    {%- assign article_obj = articles[m] -%}
                                    
                                        <div class="swiper-slide">
                                            
                                            <div class="article-each-wrapper height-100">
                                                {%- render 'article-each', article: article_obj -%}
                                            </div>
                                        
                                    </div>
                                {%- endif -%}
                            {%- endfor -%}
                        {%- endif -%}
                    </div>

                    <div class="swiper-custom-arrow left">{{ settings.icon_btn_left }}</div>
                    <div class="swiper-custom-arrow right">{{ settings.icon_btn_right }}</div>
                    <div class="swiper-pagination swiper-pagination-progressbar swiper-pagination-horizontal d-mt-30 mt-25"></div>
                </div>
            </div>
        </div>
    </div>
</section>

{% assign function_name = "collection_magazine" %}
{% assign prefix = 'blog_press' %}

<script>
    var {{ prefix }}Init = false;
    var {{ prefix }}Slider = Swiper;

    function sliderInit{{ function_name }}() {
        if (!{{ prefix }}Init) {
            {{ prefix }}Init = true;
            {{ prefix }}Slider = new Swiper('#slider-more-article-container', {
                {% if section.settings.enable_autoslide %}
                autoplay: {
                    delay: {{ section.settings.delay_autoslide }}
                },
                {% endif %}
                slidesPerView: 'auto',
                spaceBetween: 0,
                loop: false,
                preloadImages: false,
                lazy: true,
                centeredSlides: false,
                pagination: {
                    el: "#slider-more-article-container .swiper-pagination",
                    clickable: true,
                    type: "progressbar"
                },
                navigation: {
                    nextEl: '#slider-more-article-container .swiper-custom-arrow.right',
                    prevEl: '#slider-more-article-container .swiper-custom-arrow.left'
                },
                on: {
                    init: function() {
                        $360.lazyLoadInstance.update();
                    },
                    slideChange: function() {
                        $360.lazyLoadInstance.update();
                    },
                    resize: function() {
                        $360.lazyLoadInstance.update();
                    }
                }
            });

            // Set arrow position
            const image_height = document.querySelector('#slider-more-article-container.swiper .global-image-wrapper').clientHeight;
            const arrow_height = document.querySelector('#slider-more-article-container.swiper .swiper-custom-arrow').clientHeight;
            const arrows = document.querySelectorAll('#slider-more-article-container.swiper .swiper-custom-arrow');
            const top = (image_height - arrow_height) / 2;
            arrows.forEach(elem => {
                elem.style.transform = 'unset';
                elem.style.top = top + 'px';
            });
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        sliderInit{{ function_name }}();
    });

    function copyToClipboard(event){
        const inputcopy = event.target.closest(".copy-to-clipboard").querySelector(".clipboard-value");
        const copynotif = event.target.closest(".copy-to-clipboard").querySelector(".copy-notif");

        inputcopy.setSelectionRange(0, inputcopy.value.length);
        inputcopy.select();
        
        document.execCommand("copy");

        copynotif.classList.add("visible");
        setTimeout( function(){
            copynotif.classList.remove("visible");
            clearTimeout(this);
        }, 2000);
    }
</script>

